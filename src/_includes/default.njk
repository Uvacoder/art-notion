<!DOCTYPE html>
<html lang="en">
  <head>

    <!-- Recommended -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Meta -->
    <meta name="description" content="{{ metadata.description }}" />
    <meta name="generator" content="{{ eleventy.generator }}" />

    <!-- Icons -->
    <!-- https://favicon.io/ -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="{{ '/apple-touch-icon.png' | url }}"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="{{ '/favicon-32x32.png' | url }}"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="{{ '/favicon-16x16.png' | url }}"
    />
    <link rel="manifest" href="{{ '/site.webmanifest' | url }}" />

    <title>{{ title or metadata.title }}</title>
    
    <link rel="preload" href="{{ '/fonts/SpaceGrotesk[wght].woff2' | url }}" as="font" type="font/woff2" crossorigin />

    <link rel="stylesheet" href="{{ '/site.css' | url }}" />
  </head>

  <body>
    <main class="container mx-auto">
    {% block content %}{% endblock %}
    </main>
  </body>
</html>
